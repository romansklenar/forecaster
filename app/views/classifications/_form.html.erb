<%= simple_form_for([@company, @classification], :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :company %>
    <%= f.input :text %>
    <%= f.input :category %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, nil, :class => 'btn btn-primary' %>
    <%= link_to t('buttons.cancel'), company_classifications_path(@company), :class => 'btn' %>
  </div>
<% end %>