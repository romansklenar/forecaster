<%= simple_form_for(@company, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :code %>
    <%= f.input :messages_url %>
    <%= f.input :stocks_url %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, nil, :class => 'btn btn-primary' %>
    <%= link_to t('buttons.cancell'), companies_path, :class => 'btn' %>
  </div>
<% end %>